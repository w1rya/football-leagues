<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MatchActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_round_arrow_back_24_green"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/league_name"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:srcCompat="@drawable/shape_score"
        android:contentDescription="@string/match_thumbnail" />

    <TextView
        android:id="@+id/tv_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/colorSoftBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_thumb"
        android:text="@string/season" />

    <TextView
        android:id="@+id/tv_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/event"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_season" />

    <TextView
        android:id="@+id/tv_home_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_score"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftWhite"
        android:textSize="32sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_event"
        app:layout_constraintEnd_toStartOf="@+id/tv_season"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_home_goal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftBlack"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_score"
        app:layout_constraintStart_toStartOf="@+id/tv_home_score"
        app:drawableStartCompat="@drawable/ic_round_sports_soccer_24" />

    <TextView
        android:id="@+id/tv_home_red_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftBlack"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_goal"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_score"
        app:layout_constraintStart_toStartOf="@+id/tv_home_score"
        app:drawableStartCompat="@drawable/ic_red_card" />

    <TextView
        android:id="@+id/tv_home_yellow_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftBlack"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_red_card"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_score"
        app:layout_constraintStart_toStartOf="@+id/tv_home_score"
        app:drawableStartCompat="@drawable/ic_yellow_card" />

    <TextView
        android:id="@+id/tv_home_formation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftBlack"
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_yellow_card"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_score"
        app:layout_constraintStart_toStartOf="@+id/tv_home_score"
        app:drawableStartCompat="@drawable/ic_formation" />

    <TextView
        android:id="@+id/tv_away_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_score"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftWhite"
        android:textSize="32sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_event"
        app:layout_constraintStart_toEndOf="@id/tv_season"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_home_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/home_team"
        android:textColor="@color/colorSoftBlack"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_home_score"
        app:layout_constraintStart_toStartOf="@+id/tv_home_score"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_score" />


    <TextView
        android:id="@+id/tv_away_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/away_team"
        android:textColor="@color/colorSoftBlack"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tv_away_score"
        app:layout_constraintStart_toStartOf="@+id/tv_away_score"
        app:layout_constraintTop_toBottomOf="@+id/tv_away_score" />

    <TextView
        android:id="@+id/tv_away_goal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftBlack"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_away_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_away_score"
        app:layout_constraintStart_toStartOf="@+id/tv_away_score"
        app:drawableStartCompat="@drawable/ic_round_sports_soccer_24" />

    <TextView
        android:id="@+id/tv_away_red_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftBlack"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_away_goal"
        app:layout_constraintEnd_toEndOf="@+id/tv_away_score"
        app:layout_constraintStart_toStartOf="@+id/tv_away_score"
        app:drawableStartCompat="@drawable/ic_red_card" />

    <TextView
        android:id="@+id/tv_away_yellow_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_score"
        android:textColor="@color/colorSoftBlack"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_away_red_card"
        app:layout_constraintEnd_toEndOf="@+id/tv_away_score"
        app:layout_constraintStart_toStartOf="@+id/tv_away_score"
        app:drawableStartCompat="@drawable/ic_yellow_card" />

    <TextView
        android:id="@+id/tv_away_formation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_score"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/colorSoftBlack"
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_away_yellow_card"
        app:layout_constraintEnd_toEndOf="@+id/tv_away_score"
        app:layout_constraintStart_toStartOf="@+id/tv_away_score"
        app:drawableStartCompat="@drawable/ic_formation" />

    <TextView
        android:id="@+id/tv_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/venue"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/iv_thumb"
        app:layout_constraintEnd_toEndOf="@+id/iv_thumb" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/date"
        android:textColor="@color/colorSoftBlack"
        app:drawableStartCompat="@drawable/ic_round_calendar_today_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_season" />

    <ProgressBar
        android:id="@+id/progressBarMatch"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>